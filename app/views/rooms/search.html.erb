<div class="container-fiuld room">
  <h4 class="pb-4">検索結果:<%= @rooms.count %></h4>
  <div class="row">
    <% @rooms.each do |room| %>
      <div class="col-sm-6 col-lg-4 col-xl-3 column">
        <div class="room-frame-inner">
            <%= link_to room do %>
              <div class="room-image-out">
                <%= image_tag(room.room_image.to_s, class: "room-image") %>
              </div>
              <div class="room-profile">
                <p class="room-profile-name"><%= room.room_name %></p>
                <p class="room-profile-city"><%= room.room_address %></p>
                <p class="room-profile-price">¥<%= room.room_price %></p>
              </div>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
