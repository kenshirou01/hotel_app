<div class="container reservations-new">
  <div class="row">
    <div class="column-6 offset-3">
      <div class="reservations-new-nav">

        <h4 class="reservations-new-check-content">予約内容確認</h4>

        <h5>
          <%= "¥ #{@reservation.room.room_price}/日" %>
        </h5>

        <div class="reservations-new-date-select">
          <%= form_with model: @reservation, class: "new_reservation" do |f| %>
            <%= f.hidden_field :people %>
            <%= f.hidden_field :total_day %>
            <%= f.hidden_field :room_id %>
            <%= f.hidden_field :user_id %>

            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, :readonly => true, class: "form-control mb-4" %>

            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, :readonly => true, class: "form-control mb-4" %>

            <h6 class="reservations-new-check-content">
              <%= "使用日数：#{@reservation.total_day}" %>
            </h6>

            <h6 class="reservations-new-check-content">
              <%= "人数：:#{@reservation.people}" %>
            </h6>

            <%= f.label :total_amount, "合計金額" %>
            <%= f.text_field :total_amount, :readonly => true, class: "form-control mb-4" %>

            <p class="reservations-new-check-content">上記内容でよろしければ「予約を確定」を押してください</p>

            <%= f.submit '予約を確定', class: "btn btn-primary form-control my-3" %>
            <%= link_to "ルーム詳細に戻る", :back, class: "btn btn-secondary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
