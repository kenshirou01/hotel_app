<div class = "row">
  <div class = "col-md-8">
    <%= image_tag(@room.room_image.to_s, class: "room-show-image") %>
    <div>
      <% if @user.image? %>
        <%= image_tag(@user.image.url, class: "host-icon") %>
      <% else %>
        <%= image_tag("default_icon.jpeg", class: "host-icon") %>
      <% end %>
    </div>
    <div>
      <p><%= @room.room_name %></p>
      <p><%= @room.room_address %></p>
    </div>
    <p><%= @room.room_introduction %></p>
  </div>

  <div>
    <% if flash[:notice] %>
      <p class = notice ><%= flash[:notice] %></p>
    <% end %>
    <h5><%= @room.room_price %>/ 日</h5>
    <%= form_with model: @reservation, url: new_reservation_path do |f| %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%=%>
      <table>
        <tr>
          <th><%= f.label :start_date, "開始日" %></th>
          <td><%= f.date_field :start_date %></td>
        </tr>
        <tr>
          <th><%= f.label :end_date, "終了日" %></th>
          <td><%= f.date_field :end_date %></td>
        </tr>
        <tr>
          <th><%= f.label :people, "人数" %></th>
          <td><%= f.number_field :people %></td>
        </tr>
      </table>
      <div class="actions">
        <%= f.submit "予約する" %>
      </div>
    <% end %>
  </div>
</div>
