<h4>予約内容確認</h4>
<% if flash[:notice_green] %>
  <p class = notice_green ><%= flash[:notice_green] %></p>
<% elsif flash[:notice_red] %>
  <p class = notice_red ><%= flash[:notice_red] %></p>
<% end %>
<%= render "shared/error", obj: @reservation %>

<%= form_with model: @reservation do |f| %>
<table>
  <tr>
    <th><%= f.label :start_date, "開始日" %></th>
    <th><%= f.date_field :start_date %></th>
  </tr>
  <tr>
    <th><%= f.label :end_date, "終了日" %></th>
    <th><%= f.date_field :end_date %></th>
  </tr>
  <tr>
    <th><%= f.label :people, "人数" %></th>
    <th><%= f.number_field :people %></th>
  </tr>
</table>
<%= f.hidden_field :room_id %>
<%= f.hidden_field :user_id %>
<%= f.submit '予約する' %>
<% end %>
