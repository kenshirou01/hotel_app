<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row column column-greid-6">
        <div class="form-fream">
          <div class="form-area">

            <p class="form-area-title blank-b">まだ体験したことのない旅をしよう</p>

            <%= search_form_for @search, url: search_rooms_path do |f| %>
              <%= f.label :room_address_cont, 'エリア' %>
              <%= f.search_field :room_address_cont, placeholder: "東京", :class => 'form-control blank-b' %>
              <%= f.submit '探す', :class => 'form-control btn-primary blank-b' %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="panel-area blank-m-all">
      <h1 class="section-title">おすすめエリア</h1>
      <div class="row">
        <div class="panel-item column-greid-3 column-6 column">
          <span>東京</span>
          <%= link_to (image_tag("img_tokyo.jpg", class: "panel-image")), {:controller => "rooms", :action => "search",:q => {:room_address_cont => '東京'}} %>
        </div>
        <div class="panel-item column-greid-3 column-6 column">
          <span>大阪</span>
          <%= link_to (image_tag("img_osaka.jpg", class: "panel-image")), {:controller => "rooms", :action => "search", :q => {:room_address_cont => '大阪'}} %>
        </div>
        <div class="panel-item column-greid-3 column-6 column">
          <span>京都</span>
          <%= link_to (image_tag("img_kyoto.jpg", class: "panel-image")), {:controller => "rooms", :action => "search", :q => {:room_address_cont => '京都'}} %>
        </div>
        <div class="panel-item column-greid-3 column-6 column">
          <span>札幌</span>
          <%= link_to (image_tag("img_sapporo.jpg", class: "panel-image")), {:controller => "rooms", :action => "search", :q => {:room_address_cont => '札幌'}} %>
        </div>
      </div>

    </div>

  </div>
</div>
