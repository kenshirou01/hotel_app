<div class="container-fiuld user">
  <div class="row">

    <%= render "shared/said_menu" %>

    <h2>プロフィール</h2>

    <%= form_with model: @user do |f| %>

      <% if @user.image? %>
        <%= image_tag(@user.image.url, class: "icon-image host-icon") %>
      <% else %>
        <%= image_tag("default_icon.jpeg", class: "host-icon p-1") %>
      <% end %>

      <div class="field">
        <%= f.label :image %><br/>
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :profile %><br />
        <%= f.text_area :profile, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <%= link_to "Back", :back %>
    </div>
  </div>
</div>
