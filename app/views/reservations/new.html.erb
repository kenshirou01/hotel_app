<div class="container reservations-new">
  <div class="">
    <%= render "shared/error", obj: @reservation %>

    <div class="reservations-new-nav">
      <h4 class="reservation_new_check_title">予約内容確認</h4>

      <h5 class="price-icon">
      <%= "¥ #{@reservation.room.room_price}/日" %>
      </h5>

      <div class="reservations-new-date-select">

        <%= form_with model: @reservation do |f| %>
          <table>
            <tr>
              <th><%= f.label :start_date, "開始日" %></th>
              <th><%= f.date_field :start_date %></th>
            </tr>
            <tr>
              <th><%= f.label :end_date, "終了日" %></th>
              <th><%= f.date_field :end_date %></th>
            </tr>
            <tr>
              <th><%= "使用日数：#{@reservation.total_day}" %></th>
            </tr>
            <tr>
              <th><%= "人数：:#{@reservation.people}" %></th>
            </tr>
            <tr>
              <th><%= f.label :total_amount, "合計金額" %></th>
              <th><%= f.text_field :total_amount %></th>
            </tr>
          </table>
          <%= f.hidden_field :people %>
          <%= f.hidden_field :total_day %>
          <%= f.hidden_field :room_id %>
          <%= f.hidden_field :user_id %>
          <%= f.submit '予約する' %>
          <%= link_to "ルーム詳細に戻る", :back %>
        <% end %>
      </div>
    </div>
  </div>
</div>
