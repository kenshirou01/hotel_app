<h3>登録済みルーム一覧</h3>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <% if room.user_id == @user.id %>
        <tr>
          <td><%= image_tag(room.room_image.to_s, class: "room-posts-image") %></td>
          <td><%= link_to (room.room_name), room %></td>
          <td><%= room.room_introduction %></td>
          <td>¥<%= room.room_price %></td>
          <td><%= room.room_address %></td>
          <td><%= room.created_at.to_s(:datetime_jp) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
